<Window x:Class="Chat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="ChatWindow_Loaded">
    <Grid>
        <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" Margin="10,387,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Height="37"/>
        <TextBox x:Name="txtBoxMessage" HorizontalAlignment="Left" Margin="213,387,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="491" Height="37"/>
        <Button x:Name="btnSendMessage" Content="Send" HorizontalAlignment="Left" Margin="709,387,0,0" VerticalAlignment="Top" Width="91" Height="37" Click="btnSendMessage_Click"/>
        <TextBox x:Name="txtBoxMessages" HorizontalAlignment="Left" Margin="10,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="790" Height="382" />

    </Grid>
</Window>
